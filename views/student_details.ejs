<html>

<head>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/student-details.css">
    <ul class="nav justify-content-center" id="nav">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home page</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/students">List of students</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/students/data">Data visualization</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/students/create">Creation of student</a>
        </li>
    </ul>
</head>

<body>
    <div id="title">
        Informations about the student
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm" id="text">
                <u>Name of the student :</u>
                <%=students[id].name%> <br><br> <u>School/University :</u>
                    <%=students[id].school%> <br><br> <u>Birth date :</u>
                        <%=students[id].birth%> <br><br> <u>Nationality :</u>
                            <%=students[id].nationality%> <br><br> <u>Mail :</u>
                                <%=students[id].mail%>
            </div>
            <div class="col-sm" id="photo">
                <img src="<%=students[id].photo%>" width=150 height=200>
                <img src="<%=students[id].logoUniv%>" width=100 height=100 id="logo">
            </div>
        </div>
    </div>
    <div id="info">
        <a type="button" class="btn btn-dark"
            href="mailto:<%=students[id].mail%>?subject=Contact%20student%20:%20<%=students[id].name%>&body=Dear%20<%=students[id].name%>%20,">Contact
            the student</a>
        <a type="button" class="btn btn-dark" href="/students/update/<%=id%>">Modify student <br> with POST method</a>
        <button type="button" class="btn btn-dark" onclick="window.print();">Print informations</button>
    </div>
    <div>
        <form method="POST" action="/students/<%=id%>?_method=PUT" id="testput">
            <input type="text" name="name" placeholder="Name" required>
            <input type="text" name="school" placeholder="University" required>
            <input type="text" name="birth" placeholder="Birthdate" required>
            <input type="text" name="nationality" placeholder="Nationality" required>
            <input type="text" name="mail" placeholder="Mail" required>
            <br>
            <br>
            <button type="submit">Modify student <br> with PUT method</button>
        </form>
    </div>
</body>
<script src="/js/bootstrap.js"></script>

</html>